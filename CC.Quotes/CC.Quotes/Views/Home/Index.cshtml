@model IEnumerable<CC.Quotes.Entities.Quote>

@{
    ViewBag.Title = "Index";
}

<div id="templatemo_content">

    <div id="templatemo_content_left">
        <div class="templatemo_content_left_section">
            <h1>Popular Topics</h1>
            <ul>
                <li><a href="#">Inspirational</a></li>
                <li><a href="#">Motivational</a></li>
                <li><a href="#">Life</a></li>
                <li><a href="#">Love</a></li>
                <li><a href="#">Funny</a></li>
                <li><a href="#">Positive</a></li>
                <li><a href="#">Friendship</a></li>
                <li><a href="#">Success</a></li>
                <li><a href="#">Happiness</a></li>
            </ul>
        </div>
        <div class="templatemo_content_left_section">
            <h1>Popular Authors</h1>
            <ul>
                @foreach (var item in ViewBag.AuthorsHome)
                {
                <li><a href="#">@item.Name</a></li>
                }
            </ul>
        </div>

        <div class="templatemo_content_left_section">
            <a href="http://validator.w3.org/check?uri=referer"><img style="border:0;width:88px;height:31px" src="http://www.w3.org/Icons/valid-xhtml10" alt="Valid XHTML 1.0 Transitional" width="88" height="31" vspace="8" border="0" /></a>
            <a href="http://jigsaw.w3.org/css-validator/check/referer"><img style="border:0;width:88px;height:31px" src="http://jigsaw.w3.org/css-validator/images/vcss-blue" alt="Valid CSS!" vspace="8" border="0" /></a>
        </div>
    </div> <!-- end of content left -->

    <div id="templatemo_content_right">
    <div class="col col-sm-12 col-md-7 ">
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <div class="templatemo_product_box">
                        <h1>@item.Author.Name</h1>
                        <h3> @item.Text</h3>
                        <h4>@item.Category</h4>
                        @if (User.Identity.IsAuthenticated) {
                        <div quoteId="@item.QuoteID" class="buy_now_button favourite"><a>Favorite</a></div>
                        <div class="detail_button"><a href="subpage.html">Collect</a></div>
                        }
                        <div class="cleaner">&nbsp;</div>
                    </div>
                </li>
                <div class="cleaner_with_height">&nbsp;</div>
            }
        </ul>
    </div>
 

       

</div> <!-- end of content -->

@section js {
        <script>
            $(".favourite").on("click", function () {
                var quoteId = $(this).attr("quoteId");

                $.get("User/AddFavourite?quoteId=" + quoteId, function () {
                    console.log(quoteId);
                });
            });
        </script>
    }


